/** Stylus Styles */
@import '../../node_modules/vuetify/src/stylus/settings/_colors'

$theme := {
  primary: #f31717
  accent: rgb(226, 88, 3)
  secondary: rgba(112, 193, 147, 0.5)
  info: rgba(132, 195, 223, 0.8)
  warning: $amber.darken-2
  error: $red.accent-4
  success: #C8E7C1
}

@import '../../node_modules/vuetify/src/stylus/main'

.center-content {
  justify-content: center;
}
.custom-loader {
  animation: loader 1s infinite;
  display: flex;
}
@-moz-keyframes loader {
  from {
    transform: rotate(0);
  }
  to {
    transform: rotate(360deg);
  }
}
@-webkit-keyframes loader {
  from {
    transform: rotate(0);
  }
  to {
    transform: rotate(360deg);
  }
}
@-o-keyframes loader {
  from {
    transform: rotate(0);
  }
  to {
    transform: rotate(360deg);
  }
}
@keyframes loader {
  from {
    transform: rotate(0);
  }
  to {
    transform: rotate(360deg);
  }
}
body {
  min-height : 600px;
}

